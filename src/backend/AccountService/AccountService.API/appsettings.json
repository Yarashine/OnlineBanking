{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Pagination": {
    "DefaultPageSize": 3
  },
  "ConnectionStrings": {
    "MSSQL": "${MSSQL_CONNECTION}"
  },
  "Kafka": {
    "BootstrapServers": "${KAFKA_BOOTSTRAP_SERVERS}",
    "Topics": {
      "SendNotification": "send-notification"
    }
  },
  "Logstash": {
    "Uri": "${LOGSTASH_URI}"
  },
  "AllowedHosts": "*"
}
