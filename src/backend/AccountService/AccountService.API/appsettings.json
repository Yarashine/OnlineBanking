{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Pagination": {
    "DefaultPageSize": 3
  },
  "ConnectionStrings": {
    "MSSQL": "${DB_CONNECTION}"
  },
  "Kafka": {
    "BootstrapServers": "${KAFKA_BOOTSTRAP_SERVERS}",
    "Topics": {
      "SendNotification": "${KAFKA_TOPIC_SEND_NOTIFICATION}"
    }
  },
  "AllowedHosts": "*"
}
